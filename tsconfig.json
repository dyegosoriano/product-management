{
  "compilerOptions": {
    "sourceMap": true,
    "lib": ["esnext"],
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@infra/*": ["infra/*"],
      "@core/*": ["core/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["coverage", "dist"],
  "include": ["./src/**/*"]
}
